<project default="runJunittest" name="compile and run Junit test"> 
<target name="runJunittest" depends="compile"> 
<junit printsummary="on"> 
 <test name="FirstTest"/> 
  <classpath> 
  <pathelement location="junit-4.10.jar"/> 
